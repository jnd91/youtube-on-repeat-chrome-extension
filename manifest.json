{
  "manifest_version": 2,
  "name": "YouTube™ On Repeat",
  "description": "Redirects you to the awesome YouTube™ on repeat service [me@nishantarora.in]",
  "version": "0.7",
  "permissions": [
    "*://www.youtube.com/*",
    "*://www.youtubeonrepeat.com/*",
    "*://youtubeonrepeat.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://www.youtube.com/*"
      ],
      "js": [
        "jquery.js",
        "repeat.js",
        "ga.js",
        "ga-config.js"
      ]
    },
    {
      "matches": [
        "*://www.youtubeonrepeat.com/*",
        "*://youtubeonrepeat.com/*"
      ],
      "js": [
        "installed.js"
      ]
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
